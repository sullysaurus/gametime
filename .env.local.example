# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key  # Required for image uploads to storage!

# Vercel AI Gateway (Optional - for analytics/caching/rate-limiting)
# Only needed if you want to route requests through Vercel AI Gateway
AI_GATEWAY_API_KEY=your-gateway-token
AI_GATEWAY_URL=https://ai-gateway.vercel.sh/v1

# OpenAI (for image generation with DALL-E, GPT-Image, etc.)
OPENAI_API_KEY=sk-your-openai-key

# Claude (for text generation - prompt enhancement, descriptions, etc.)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Gemini (for text generation - alternative to Claude)
GOOGLE_GENERATIVE_AI_API_KEY=your-gemini-key

# Black Forest Labs (for image generation with FLUX)
BFL_API_KEY=your-bfl-api-key
